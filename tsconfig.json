{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "declaration": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "noImplicitAny": true,
    "paths": {
      "~/*": ["./src/*"],
      "~~/*": ["./*"],
      "@src/*": ["./src/*"],
      "@root/*": ["./*"]
    },
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}

